<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/card_corner_radius" />
            <gradient
                android:startColor="@color/crimson_blaze"
                android:endColor="@color/varden"
                android:angle="45" />
            <stroke
                android:width="2dp"
                android:color="@color/cosmos_blue" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/card_corner_radius" />
            <gradient
                android:startColor="@color/cosmos_blue"
                android:endColor="@color/crimson_blaze"
                android:angle="45" />
            <stroke
                android:width="1dp"
                android:color="@color/cosmos_blue" />
        </shape>
    </item>

</selector>