<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/varden"
    android:fillViewport="true"
    tools:context=".SurveyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/blue_marble"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- Introducción -->
        <TextView
            android:id="@+id/introTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_intro"
            android:textSize="16sp"
            android:textColor="@color/blue_marble"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="2dp" />

        <!-- Tarjeta de preguntas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/crimson_blaze">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Pregunta 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question1"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/question1RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <RadioButton
                        android:id="@+id/q1No"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q1Sometimes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sometimes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q1Yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                </RadioGroup>

                <!-- Pregunta 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question2"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/question2RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <RadioButton
                        android:id="@+id/q2No"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q2Sometimes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sometimes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q2Yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                </RadioGroup>

                <!-- Pregunta 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question3"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/question3RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <RadioButton
                        android:id="@+id/q3No"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q3Sometimes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sometimes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q3Yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                </RadioGroup>

                <!-- Pregunta 4 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question4"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/question4RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <RadioButton
                        android:id="@+id/q4No"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q4Sometimes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sometimes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q4Yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                </RadioGroup>

                <!-- Pregunta 5 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question5"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/question5RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <RadioButton
                        android:id="@+id/q5No"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q5Sometimes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sometimes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q5Yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                </RadioGroup>

                <!-- Pregunta 6 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question6"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/question6RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/q6No"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q6Sometimes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sometimes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                    <RadioButton
                        android:id="@+id/q6Yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/yes"
                        android:textColor="@color/white"
                        android:buttonTint="@color/blue_marble" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botón de evaluación -->
        <Button
            android:id="@+id/evaluateButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Evaluar Respuestas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/gochujang_red" />

        <!-- Botón volver -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Volver"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/crimson_blaze" />

    </LinearLayout>

</ScrollView>