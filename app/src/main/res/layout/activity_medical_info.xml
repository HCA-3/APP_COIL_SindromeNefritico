<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/varden"
    android:fillViewport="true"
    tools:context=".MedicalInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ns_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/blue_marble"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Tarjeta de descripción -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/crimson_blaze">

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ns_description"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="20dp"
                android:lineSpacingExtra="4dp" />

        </androidx.cardview.widget.CardView>

        <!-- Tarjeta de síntomas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/crimson_blaze">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/symptomsTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ns_symptoms"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/symptom1TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ns_symptom1"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/symptom2TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ns_symptom2"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/symptom3TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ns_symptom3"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/symptom4TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ns_symptom4"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="16dp" />

                <!-- Botón de información sobre síntomas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_info"
                        android:contentDescription="Info"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/edemaInfoButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/learn_more_about_edema"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tarjeta de causas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/crimson_blaze">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ns_causes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ns_cause1"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ns_cause2"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ns_cause3"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botones de navegación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Volver"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/blue_marble" />

            <Button
                android:id="@+id/diagnosisButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/detailed_info"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/gochujang_red" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>