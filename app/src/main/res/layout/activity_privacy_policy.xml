<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/varden"
    android:fillViewport="true"
    tools:context=".PrivacyPolicyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo o Icono -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_dialog_info"
            android:layout_marginBottom="16dp"
            app:tint="@color/crimson_blaze" />

        <!-- Título -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/blue_marble"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Contenido de la política -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Sección 1: Finalidad -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_1_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/crimson_blaze"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_1_content"
                    android:textSize="14sp"
                    android:textColor="@color/blue_marble"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Sección 2: Descargo médico -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_2_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/crimson_blaze"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_2_content"
                    android:textSize="14sp"
                    android:textColor="@color/blue_marble"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Sección 3: Datos personales -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_3_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/crimson_blaze"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_3_content"
                    android:textSize="14sp"
                    android:textColor="@color/blue_marble"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Sección 4: Uso educativo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_4_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/crimson_blaze"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_4_content"
                    android:textSize="14sp"
                    android:textColor="@color/blue_marble"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Sección 5: Principios éticos -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_5_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/crimson_blaze"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_5_content"
                    android:textSize="14sp"
                    android:textColor="@color/blue_marble"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Sección 6: Colaboradores -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_6_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/crimson_blaze"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_6_content"
                    android:textSize="14sp"
                    android:textColor="@color/blue_marble"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Sección 7: Aceptación -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_7_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/crimson_blaze"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_section_7_content"
                    android:textSize="14sp"
                    android:textColor="@color/blue_marble"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Checkbox de aceptación -->
        <CheckBox
            android:id="@+id/acceptCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_accept_checkbox"
            android:textSize="14sp"
            android:textColor="@color/blue_marble"
            android:buttonTint="@color/crimson_blaze"
            android:layout_marginBottom="16dp" />

        <!-- Botón Continuar -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/privacy_continue_button"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/crimson_blaze"
            android:enabled="false" />

    </LinearLayout>

</ScrollView>
