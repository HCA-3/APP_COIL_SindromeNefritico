    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/varden"
    android:fillViewport="true"
    tools:context=".CreditsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/credits_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/blue_marble"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Versión de la app -->
        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textSize="16sp"
            android:textColor="@color/blue_marble"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

        <!-- Equipo de Desarrollo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/crimson_blaze">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/development_team"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center" />

                <!-- Espacios para 2 personas del equipo de desarrollo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Persona 1 Desarrollo -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/dev1ImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:background="@drawable/person_photo_background"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            app:tint="@color/blue_marble" />

                        <TextView
                            android:id="@+id/dev1NameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Desarrollador 1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/dev1EmailTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="dev1@estasinefro.com"
                            android:textSize="12sp"
                            android:textColor="@color/blue_marble"
                            android:textAlignment="center" />

