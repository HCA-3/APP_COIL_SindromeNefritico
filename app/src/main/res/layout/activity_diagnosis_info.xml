                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/high_bp"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/less_urine"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/headache"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fatigue"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/breathing"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/heart_problems"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/other_symptoms"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Mecanismo del Daño -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/crimson_blaze">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/damage_mechanism_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/c3_complex"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/c3_low"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/immune_complexes"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/direct_attack"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/protein_loss"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <!-- Botón de información sobre proteinuria -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_info"
                        android:contentDescription="Info"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/proteinuriaInfoButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/learn_more_about_proteinuria"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textStyle="italic" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cell_damage"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Diagnóstico -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/crimson_blaze">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/diagnosis_process_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/clinical_history"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_protein"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/antibodies"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kidney_function"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/complement"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/allergy"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tratamiento -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/crimson_blaze">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/treatment_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/treatment_goal"
                    android:textSize="16sp"
                    android:textColor="@color/blue_marble"
