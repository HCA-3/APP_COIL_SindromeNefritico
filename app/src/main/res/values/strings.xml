    <!-- Detailed Postinfectious GN Information -->
    <string name="postinfectious_gn_detailed_title">Glomerulonefritis Postinfecciosa - Información Completa</string>
    <string name="postinfectious_gn_pathophysiology">Fisiopatología Detallada:</string>
    <string name="postinfectious_gn_path1">• Infección por estreptococo (1-3 semanas antes)</string>
    <string name="postinfectious_gn_path2">• Producción de anticuerpos contra antígenos estreptocócicos</string>
    <string name="postinfectious_gn_path3">• Formación de complejos inmunes circulantes</string>
    <string name="postinfectious_gn_path4">• Depósito de complejos en glomérulos</string>
    <string name="postinfectious_gn_path5">• Activación del complemento (C3, C4)</string>
    <string name="postinfectious_gn_path6">• Liberación de mediadores inflamatorios</string>
    <string name="postinfectious_gn_path7">• Proliferación de células mesangiales y endoteliales</string>
    <string name="postinfectious_gn_path8">• Reducción de la superficie de filtración glomerular</string>

    <string name="postinfectious_gn_epidemiology">Epidemiología:</string>
    <string name="postinfectious_gn_epi1">• Incidencia: 2-3 casos por 100,000 habitantes/año</string>
    <string name="postinfectious_gn_epi2">• Más común en niños (6-10 años)</string>
    <string name="postinfectious_gn_epi3">• Predominio masculino 2:1</string>
    <string name="postinfectious_gn_epi4">• Mayor incidencia en climas fríos</string>
    <string name="postinfectious_gn_epi5">• Picos estacionales (invierno y primavera)</string>
    <string name="postinfectious_gn_epi6">• Disminución con el uso de antibióticos</string>

    <string name="postinfectious_gn_symptoms_detailed">Síntomas Detallados:</string>
    <string name="postinfectious_gn_symptom1">• Orina oscura, color té o con sangre (hematuria macroscópica)</string>
    <string name="postinfectious_gn_symptom2">• Hinchazón periorbital y en extremidades (edema)</string>
    <string name="postinfectious_gn_symptom3">• Presión arterial elevada (hipertensión)</string>
    <string name="postinfectious_gn_symptom4">• Disminución del volumen urinario (oliguria)</string>
    <string name="postinfectious_gn_symptom5">• Dolor lumbar o en flancos</string>
    <string name="postinfectious_gn_symptom6">• Fatiga y malestar general</string>
    <string name="postinfectious_gn_symptom7">• Cefalea por hipertensión</string>
    <string name="postinfectious_gn_symptom8">• Náuseas y vómitos</string>
    <string name="postinfectious_gn_symptom9">• Fiebre baja o ausente</string>
    <string name="postinfectious_gn_symptom10">• Anorexia y pérdida de peso</string>

    <string name="postinfectious_gn_laboratory">Hallazgos de Laboratorio:</string>
    <string name="postinfectious_gn_lab1">• Hematuria: glóbulos rojos dismórficos y cilindros hemáticos</string>
    <string name="postinfectious_gn_lab2">• Proteinuria: generalmente &lt;3g/día (no nefrótico)</string>
    <string name="postinfectious_gn_lab3">• Cilindros eritrocitarios y leucocitarios</string>
    <string name="postinfectious_gn_lab4">• Creatinina sérica elevada (disfunción renal)</string>
    <string name="postinfectious_gn_lab5">• BUN elevado (azotemia)</string>
    <string name="postinfectious_gn_lab6">• Complemento C3 disminuido (90% de casos)</string>
    <string name="postinfectious_gn_lab7">• ASO (antiestreptolisina O) elevado</string>
    <string name="postinfectious_gn_lab8">• Anti-DNasa B elevado</string>
    <string name="postinfectious_gn_lab9">• Hipocomplementemia transitoria (6-8 semanas)</string>
    <string name="postinfectious_gn_lab10">• Anemia leve normocítica normocrómica</string>

    <string name="postinfectious_gn_histology">Hallazgos Histológicos:</string>
    <string name="postinfectious_gn_hist1">• Proliferación difusa de células mesangiales y endoteliales</string>
    <string name="postinfectious_gn_hist2">• Infiltración de leucocitos polimorfonucleares</string>
    <string name="postinfectious_gn_hist3">• Engrosamiento de la membrana basal glomerular</string>
    <string name="postinfectious_gn_hist4">• Depósitos subepiteliales en \"joroba de camello\"</string>
    <string name="postinfectious_gn_hist5">• Depósitos subendoteliales y mesangiales</string>
    <string name="postinfectious_gn_hist6">• Semilunas en casos severos</string>
    <string name="postinfectious_gn_hist7">• Inmunofluorescencia: depósitos granulares de C3 e IgG</string>

    <string name="postinfectious_gn_treatment_detailed">Tratamiento Detallado:</string>
    <string name="postinfectious_gn_treat1">• Reposo en cama durante fase aguda (1-2 semanas)</string>
    <string name="postinfectious_gn_treat2">• Restricción de sodio (&lt;2g/día) y líquidos</string>
    <string name="postinfectious_gn_treat3">• Antihipertensivos: IECA/ARA II para protección renal</string>
    <string name="postinfectious_gn_treat4">• Diuréticos de asa (furosemida) para edema</string>
    <string name="postinfectious_gn_treat5">• Antibióticos: penicilina benzatínica (si infección activa)</string>
    <string name="postinfectious_gn_treat6">• Corticosteroides en casos severos con semilunas</string>
    <string name="postinfectious_gn_treat7">• Diálisis temporal si insuficiencia renal severa</string>
    <string name="postinfectious_gn_treat8">• Monitorización electrolítica estricta</string>

    <string name="postinfectious_gn_complications">Complicaciones Potenciales:</string>
    <string name="postinfectious_gn_comp1">• Insuficiencia renal aguda (5-10% casos)</string>
    <string name="postinfectious_gn_comp2">• Encefalopatía hipertensiva</string>
    <string name="postinfectious_gn_comp3">• Edema pulmonar agudo</string>
    <string name="postinfectious_gn_comp4">• Hipercalemia peligrosa</string>
    <string name="postinfectious_gn_comp5">• Hiponatremia dilucional</string>
    <string name="postinfectious_gn_comp6">• Acidosis metabólica</string>
    <string name="postinfectious_gn_comp7">• Anemia severa</string>
    <string name="postinfectious_gn_comp8">• Convulsiones por uremia</string>

    <string name="postinfectious_gn_prognosis">Pronóstico y Evolución:</string>
    <string name="postinfectious_gn_prog1">• Niños: recuperación completa en 95% casos</string>
    <string name="postinfectious_gn_prog2">• Adultos: recuperación en 60-80% casos</string>
    <string name="postinfectious_gn_prog3">• Mejoría clínica en 1-2 semanas</string>
    <string name="postinfectious_gn_prog4">• Normalización del complemento en 6-8 semanas</string>
    <string name="postinfectious_gn_prog5">• Proteinuria residual en 10-20% casos</string>
    <string name="postinfectious_gn_prog6">• Hipertensión crónica en 5-10% casos</string>
    <string name="postinfectious_gn_prog7">• ERC terminal en &lt;1% casos</string>
    <string name="postinfectious_gn_prog8">• Seguimiento mínimo 1-2 años</string>

    <!-- Detailed Nephrotic Syndrome Information -->
    <string name="nephrotic_syndrome_detailed_title">Síndrome Nefrítico - Información Completa</string>
    <string name="nephrotic_syndrome_pathophysiology">Fisiopatología del Síndrome Nefrítico:</string>
    <string name="nephrotic_syndrome_path1">• Inflamación glomerular aguda</string>
    <string name="nephrotic_syndrome_path2">• Aumento de permeabilidad glomerular</string>
    <string name="nephrotic_syndrome_path3">• Pérdida selectiva de proteínas (&lt;3.5g/día)</string>
    <string name="nephrotic_syndrome_path4">• Retención de sodio y agua</string>
    <string name="nephrotic_syndrome_path5">• Activación del sistema renina-angiotensina</string>
    <string name="nephrotic_syndrome_path6">• Hipertensión secundaria</string>
    <string name="nephrotic_syndrome_path7">• Edema leve a moderado</string>
    <string name="nephrotic_syndrome_path8">• Sedimento urinario activo</string>

    <string name="nephrotic_syndrome_classification">Clasificación del Síndrome Nefrítico:</string>
    <string name="nephrotic_syndrome_class1">• Primario: origen glomerular intrínseco</string>
    <string name="nephrotic_syndrome_class2">• Secundario: enfermedades sistémicas</string>
    <string name="nephrotic_syndrome_class3">• Postinfeccioso: después de infecciones</string>
    <string name="nephrotic_syndrome_class4">• Autoinmune: lupus, vasculitis</string>
    <string name="nephrotic_syndrome_class5">• Hereditario: enfermedades genéticas</string>
    <string name="nephrotic_syndrome_class6">• Idiopático: causa desconocida</string>

    <string name="nephrotic_syndrome_detailed_symptoms">Síntomas Detallados:</string>
    <string name="nephrotic_syndrome_symptom1">• Hematuria macroscópica (orina rojiza)</string>
    <string name="nephrotic_syndrome_symptom2">• Proteinuria no nefrótica (&lt;3.5g/día)</string>
    <string name="nephrotic_syndrome_symptom3">• Hipertensión arterial (frecuente)</string>
    <string name="nephrotic_syndrome_symptom4">• Edema leve (periorbital, tobillos)</string>
    <string name="nephrotic_syndrome_symptom5">• Oliguria (disminución de orina)</string>
    <string name="nephrotic_syndrome_symptom6">• Sedimento urinario activo</string>
    <string name="nephrotic_syndrome_symptom7">• Cilindros hemáticos y leucocitarios</string>
    <string name="nephrotic_syndrome_symptom8">• Fatiga y debilidad</string>

    <string name="nephrotic_syndrome_laboratory_detailed">Laboratorio Detallado:</string>
    <string name="nephrotic_syndrome_lab1">• Proteinuria: 0.5-3.5g/día</string>
    <string name="nephrotic_syndrome_lab2">• Albúmina sérica normal o ligeramente baja</string>
    <string name="nephrotic_syndrome_lab3">• Hematuria con glóbulos rojos dismórficos</string>
    <string name="nephrotic_syndrome_lab4">• Cilindros hemáticos característicos</string>
    <string name="nephrotic_syndrome_lab5">• Creatinina elevada (disfunción renal)</string>
    <string name="nephrotic_syndrome_lab6">• Complemento C3 disminuido (postinfeccioso)</string>
    <string name="nephrotic_syndrome_lab7">• ASO elevado (postestreptocócico)</string>
    <string name="nephrotic_syndrome_lab8">• Lipidemia normal o ligeramente elevada</string>

    <string name="nephrotic_syndrome_differential">Diagnóstico Diferencial:</string>
    <string name="nephrotic_syndrome_diff1">• Síndrome nefrótico (proteinuria &gt;3.5g/día)</string>
    <string name="nephrotic_syndrome_diff2">• Nefropatía por IgA</string>
    <string name="nephrotic_syndrome_diff3">• Lupus eritematoso sistémico</string>
    <string name="nephrotic_syndrome_diff4">• Púrpura de Henoch-Schönlein</string>
    <string name="nephrotic_syndrome_diff5">• Vasculitis ANCA positiva</string>
    <string name="nephrotic_syndrome_diff6">• Enfermedad membranoproliferativa</string>

    <string name="nephrotic_syndrome_treatment_detailed">Tratamiento Detallado:</string>
    <string name="nephrotic_syndrome_treat1">• Tratamiento de la causa subyacente</string>
    <string name="nephrotic_syndrome_treat2">• Reposo durante fase aguda</string>
    <string name="nephrotic_syndrome_treat3">• Restricción de sodio y líquidos</string>
    <string name="nephrotic_syndrome_treat4">• Antihipertensivos (IECA/ARA II)</string>
    <string name="nephrotic_syndrome_treat5">• Diuréticos para edema</string>
    <string name="nephrotic_syndrome_treat6">• Corticosteroides (en casos autoinmunes)</string>
    <string name="nephrotic_syndrome_treat7">• Inmunosupresores (casos severos)</string>
    <string name="nephrotic_syndrome_treat8">• Diálisis (si insuficiencia renal)</string>

    <string name="nephrotic_syndrome_prognosis_detailed">Pronóstico Detallado:</string>
    <string name="nephrotic_syndrome_prog1">• Excelente en niños postinfecciosos (95%)</string>
    <string name="nephrotic_syndrome_prog2">• Variable en adultos (60-80%)</string>
    <string name="nephrotic_syndrome_prog3">• Depende de la causa subyacente</string>
    <string name="nephrotic_syndrome_prog4">• Riesgo de ERC si no se trata</string>
    <string name="nephrotic_syndrome_prog5">• Seguimiento a largo plazo necesario</string>
    <string name="nephrotic_syndrome_prog6">• Monitorización de función renal</string>
    <string name="nephrotic_syndrome_prog7">• Control de factores de riesgo</string>
    <string name="nephrotic_syndrome_prog8">• Educación del paciente fundamental</string>

